{% macro clear (name) %}
  <div class="dropdownMenu js-dropdownMenu">
    <input class="dropdownMenu__input" name="sorttype" type="hidden" value="">
    <div class="dropdownMenu__wrap">
      <div class="dropdownMenu__title">Сортировать по:</div>
      <div class="dropdownMenu__currentValue"></div>
        <ul class="dropdownMenu__list">
          <li class="dropdownMenu__item" data-value="1">Цене</li>
          <li class="dropdownMenu__item" data-value="2">Популярности</li>
          <li class="dropdownMenu__item" data-value="3">Скидке</li>
          <li class="dropdownMenu__item isActive" data-value="4">Актуальности</li>
        </ul>
    </div>
  </div>
{% endmacro %}

