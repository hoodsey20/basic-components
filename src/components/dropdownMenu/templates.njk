          <li class="dropdownMenu__item" data-value="2">Леопард</li>
          <li class="dropdownMenu__item" data-value="3">Собака</li>
          <li class="dropdownMenu__item" data-value="4">Слон</li>
        </ul>
    </div>
  </div>
{% endmacro %}
