{% macro textarea (placeholder, modificator) %}
  <textarea
    class="textarea textarea_brdr textarea_brdr_strong"
    rows="5"
    placeholder="{{ placeholder }}"
  ></textarea>
{% endmacro %}

{% macro textarea_disabled (placeholder, modificator) %}
  <textarea
    class="textarea textarea_brdr textarea_brdr_strong"
    rows="5"
    placeholder="{{ placeholder }}"
    disabled
  ></textarea>
{% endmacro %}
